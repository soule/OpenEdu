<% if teacher_signed_in? || student_signed_in? %>

<% if teacher_signed_in? %>
<%= link_to 'New Classroom', new_classroom_path %>
<% end %>
<% if student_signed_in? %>
<%= link_to 'Join Classroom', classrooms_all_path %>
<% end %>


<h1>Your Classrooms</h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Teacher</th>
      <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= link_to classroom.name, classroom %></td>
        <td><%= classroom.description %></td>
        <td><%= classroom.teacher.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>
<%= link_to "teacher login", new_teacher_session_path %>
<%= link_to "student login", new_student_session_path %>
<% end %>